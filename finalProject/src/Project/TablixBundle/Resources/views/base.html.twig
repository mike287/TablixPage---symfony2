<!DOCTYPE html>
<html class="no-js">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title> {% spaceless %}{% block pageTitle %} Strona Główna  {% endblock %}{% endspaceless %} | TablixPage </title>
        <link rel="icon" type="image/png" href="/favicon.png">
        <meta name="description" content="{% spaceless %}{% block pageDescription %} {% endblock %}{% endspaceless %}">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% block stylesheets %}
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700&subset=latin-ext,latin' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href=" {{ asset('bundles/projecttablix/css/normalize.css') }}">
        <link rel="stylesheet" href=" {{ asset('bundles/projecttablix/css/main.css') }}">
        {% endblock %}
    </head>
    <body>        
        <header id="header">
            <div class="top">
                <div class="pos-center">
                    
                    
                    <div class="menu">
                        <nav>
                            <ul>
                                <li><a href="{{ path('page_index') }}">HOME</a></li>
                                <li><a href="{{ path('page_about') }}">O MNIE</a></li>
                                <li><a href="{{ path('page_contact') }}">KONTAKT</a></li>
                            </ul>
                        </nav>

                        
                        {% if app.user %}
                        <div class="user-panel">
                            <span class="user-name">Zalogowany jako <a href="{{'user_accountSettings'}}">{{ app.user.username }}</a></span>
                            <a class="btn-green" href="{{path('_logout')}}">Wyloguj</a>
                        </div>
                        {% else %}
                        
                        <div class="user-panel">
                            <div class="btn-group">
                                {% set loginUrl = path('page_login') %}
                                <a class="btn-green" href="{{ path('page_login')}}">Zaloguj/Zarejestruj</a>

                            </div>
                        </div> 
                        {% endif %}
                       
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

            {% block topImage %}
                <div class="top-image"></div>
            {% endblock %}

        </header>

        <div id="main">

            <div class="header">
                <div class="pos-center">
                    <h2 class="left-side">{% spaceless %}{% block contentTitle %}{% endblock %}{% endspaceless %}</h2>

                    {% if hideSearch is not defined %}
                    <form class="right-side" action="{{ path('page_search') }}">
                        <input type="text" name="search" value="{{ searchParam is defined ? searchParam: "" }}" placeholder="Wyszukaj">
                    </form>
                    {% endif %}
                </div>
            </div>

            <div class="content">
                <div class="pos-center">
                    {% block content %}{% endblock %}                    
                    
                    {% if hideSidebar is not defined %}
                        
            <div class="right-side sidebar">
                <div class="menu">
                    <h3>Kategorie</h3>
                    <ul>
                        <li><a href="/category/koszykowka">koszykówka</a></li>
                        <li><a href="/category/lorem-ipsum-1">	
Lorem Ipsum 1</a></li>
                        <li><a href="/category/pilka-nozna">piłka nożna</a></li>
                        <li><a href="/category/raz-dwa-trzy">Raz dwa trzy</a></li>
                        <li><a href="/category/testowe-testy">Testowe Testy</a></li>
                    </ul>
                </div>

                <div class="tag-cloud">
                    <h3>Popularne</h3>
                    <div class="tags">
                        <a style="font-size: 1.5rem" href="/tag/iphoneonly">#iphoneonly</a>
                        <a style="font-size: 2.3rem" href="/tag/summer">#summer</a>
                        <a style="font-size: 1.3rem" href="/tag/tweegram">#tweegram</a>
                        <a style="font-size: 2.3rem" href="/tag/happy">#happy</a>
                        <a style="font-size: 2.3rem" href="/tag/follow">#follow</a>
                        <a style="font-size: 2rem" href="/tag/followme">#followme</a>
                        <a style="font-size: 1.5rem" href="/tag/christmas">#christmas</a>
                        <a style="font-size: 1.3rem" href="/tag/bestoftheday">#bestoftheday</a>
                    </div>
                </div>

                <div class="list-widget">
                    <h3>Najczciej komentowane kategorie</h3>
                    <ul>
                        <li><a href="#">piłka nożna (13)</a></li>
                    </ul>
                </div>
            </div> <!-- .right -->
                        
                    {% endif %}
                </div> <!-- .content -->

                <div class="clearfix"></div>
            </div> <!-- .pos-center -->
        </div> <!-- #main -->
        
        

        <footer id="footer">
            <div class="top">
                <div class="pos-center">
                    <ul>
                        <li><a href="{{ path('page_index') }}">Home</a></li>
                        <li><a href="{{ path('page_about') }}">O mnie</a></li>
                        <li><a href="{{ path('page_contact') }}">Kontakt</a></li>
                        <li><a href="#">Admin</a></li>
                    </ul>
                </div>
            </div>

            <div class="bottom">
                <div class="pos-center">
                    <div class="copyrights">
                        <span>mike287</span>
                    </div>
                </div>
            </div>
        </footer>
        
        {% block javascripts %}
        <script src=" {{ asset('bundles/projecttablix/js/vendor/jquery-1.10.2.min.js') }} "></script>
        <script src=" {{ asset('bundles/projecttablix/js/vendor/jquery.responsiSlider.js') }} "></script>
        <script src=" {{ asset('bundles/projecttablix/js/plugins.js') }} "></script>
        <script src=" {{ asset('bundles/projecttablix/js/main.js') }} "></script>
        {% endblock %}
    </body>
</html>
