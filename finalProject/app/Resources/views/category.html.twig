<!DOCTYPE html>
<html class="no-js">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title> {% spaceless %}{% block pageTitle %} Strona Główna  {% endblock %}{% endspaceless %} | TablixPage </title>
        <link rel="icon" type="image/png" href="/favicon.png">
        <meta name="description" content="{% spaceless %}{% block pageDescription %} {% endblock %}{% endspaceless %}">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% block stylesheets %}
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700&subset=latin-ext,latin' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href=" {{ asset('bundles/projecttablix/css/normalize.css') }}">
        <link rel="stylesheet" href=" {{ asset('bundles/projecttablix/css/main.css') }}">
        {% endblock %}
    </head>
    <body>        
        <header id="header">
            <div class="top">
                <div class="pos-center">
                    
                    <a class="mobile-menu-trigger" href="#">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </a>
                    
                    <div class="menu">
                        <nav>
                            <ul>
                                <li><a href="#">HOME</a></li>
                                <li><a href="#">O MNIE</a></li>
                                <li><a href="#">KONTAKT</a></li>
                            </ul>
                        </nav>

                        <ul class="categories">
                            <li><a href="#">Samoloty osobowe i pasażerskie</a></li>
                            <li><a class="active" href="#">Samoloty odrzutowe</a></li>
                            <li><a href="#">Samoloty wojskowe</a></li>
                            <li><a href="#">Proy kosmiczne</a></li>
                            <li><a href="#">Tajne rozwiązania</a></li>
                        </ul>
                        
                        <!-- 
                        <div class="user-panel">
                            <span class="user-name">Zalogowany jako <a href="#">macq</a></span>
                            <a class="btn-green" href="#">Wyloguj</a>
                        </div>
                         -->
                        
                        <div class="user-panel">
                            <div class="btn-group">
                                <a class="btn-green" href="#">Zaloguj</a>
                                <a class="btn-green" href="#">Zarejestruj</a>
                            </div>
                        </div> 
                       
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

            {% block topImage %}
                <div class="top-image"></div>
            {% endblock %}

                <span class="nav prev"></span>
                <span class="nav next"></span>
            </div>
        </header>

        <div id="main">

            <div class="header">
                <div class="pos-center">
                    <h2 class="left-side">{% spaceless %}{% block contentTitle %}{% endblock %}{% endspaceless %}</h2>

                    {% if hideSearch is not defined %}
                    <form class="right-side" action="#">
                        <input type="text" name="search" placeholder="Wyszukaj">
                    </form>
                    {% endif %}
                </div>
            </div>

            <div class="content">
                <div class="pos-center">
                    {% block content %}{% endblock %}                    
                    
                    {% if hideSidebar is not defined %}
                    {% endif %}

                </div> <!-- .content -->

                <div class="clearfix"></div>
            </div> <!-- .pos-center -->
        </div> <!-- #main -->

        <footer id="footer">
            <div class="top">
                <div class="pos-center">
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">O mnie</a></li>
                        <li><a href="#">Kontakt</a></li>
                        <li><a href="#">Admin</a></li>
                    </ul>
                </div>
            </div>
        </footer>
        
        {% block javascripts %}
        <script src=" {{ asset('bundles/projecttablix/js/vendor/jquery-1.10.2.min.js') }} "></script>
        <script src=" {{ asset('bundles/projecttablix/js/vendor/jquery.responsiSlider.js') }} "></script>
        <script src=" {{ asset('bundles/projecttablix/js/plugins.js') }} "></script>
        <script src=" {{ asset('bundles/projecttablix/js/main.js') }} "></script>
        {% endblock %}
    </body>
</html>
